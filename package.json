{
  "name": "commoners",
  "description": "A cross-platform development kit for everyone",
  "version": "0.0.17",
  "type": "module",
  "types": "./dist/types/index.d.ts",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "commoners": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:cli && npm run build:library",
    "build:cli": "vite build",
    "build:library": "vite build --config ./packages/core/vite.config.ts",
    "watch": "vite build --watch",
    "watch:library": "vite build --watch --config ./packages/core/vite.library.config.ts",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "docs": "vitepress dev docs",
    "docs:build": "vitepress build docs"
  },
  "dependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^1.0.2",
    "@electron/notarize": "^1.2.3",
    "@electron/remote": "^2.0.11",
    "@octokit/rest": "^19.0.11",
    "chalk": "^5.2.0",
    "clui": "^0.3.6",
    "configstore": "^6.0.0",
    "dotenv": "^16.3.1",
    "electron": "^26.2.1",
    "electron-builder": "^23.6.0",
    "esbuild": "^0.17.19",
    "inquirer": "^9.1.5",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "open": "^9.1.0",
    "plist": "^3.1.0",
    "simple-git": "^3.19.0",
    "touch": "^3.1.0",
    "vite": "^4.2.1",
    "vite-plugin-electron": "^0.11.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-pwa": "^0.16.4"
  },
  "devDependencies": {
    "@types/node": "16.18.21",
    "@vitest/coverage-v8": "^0.34.5",
    "typescript": "^4.9.5",
    "vite-plugin-static-copy": "^0.16.0",
    "vitepress": "^1.0.0-rc.20",
    "vitest": "^0.34.5"
  }
}
